/* pages/detail/detail.wxss */
.head{
  background: yellow;
}
.head image{
  display: block;
  margin: 0 auto;
  width: 280rpx;
  height: 395rpx;
  padding: 60rpx 0 ;
}
.info{
  height: 180rpx;
  margin-left: 25rpx;
  margin-top: 25rpx;
}
.info-title{
  font-size: 32rpx;
}
.allstar{
  overflow: hidden;
  margin: 12rpx 0;
}
.star{
  width: 30rpx;
  height: 30rpx;
  float: left;
}
.grade{
  font-size:24rpx;
  color:orange;
  float: left;
  margin-left: 15rpx;
}
.infomation{
  font-size: 24rpx;
  color: #ccc;
}
.bar {
  height: 30rpx;
  background: rgba(0, 0, 0, .1)
}
.title {
  margin: 35rpx 20rpx;
  height: 30rpx;
}

.title text {
  font-size: 24rpx;
  float: left;
}
.title .brief {
  font-size: 26rpx;
  font-weight: 600;
}
.title .total{
  float: right;
}
.icon-right{
  float: right;
  margin-top: 1rpx;
  width: 30rpx;
  height: 30rpx;
}
.production{
  margin: 35rpx 20rpx;
  text-indent: 54rpx;
}
.info-pro{
  font-size: 26rpx;
  display:-webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.info-pro-all{
  font-size: 26rpx;
  text-indent: 54rpx;
}

.scroll-item {
  height: auto;
}

.scroll-x {
  display: flex;
  flex-direction: row;
}
.list-item:first-of-type {
  margin-left:20rpx;
}
.list-item:last-of-type{
  margin-right: 20rpx;
}
.list-item {
  width: 220rpx;
  margin-right: 20rpx;
  font-size: 12px;
  text-align: center;
}

.list-item image {
  width: 200rpx;
  height: 295rpx;
}

.list-item text {
  display: inline-block;
  width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}
.list-item .author{
  color: #ccc;
  font-size: 22rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
scroll-view:last-of-type{
  margin-bottom: 20rpx;
}
.pl{
  display: flex;
}
.pl-head{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 20rpx 0 25rpx;
  border-radius: 4px;
}
.pl-item{
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 25rpx;
  border-bottom: 1px solid #e6e6e6;
  padding: 10rpx 0 25rpx 0;
}
.pl:last-of-type .pl-item{
  border-bottom:0;
}
.pl-title{
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}
.pl-name{
  font-size: 26rpx;
  font-weight: 600;
}
.pl-detail{
  font-size: 26rpx;
  margin: 30rpx 0 30rpx 0;
}
.pl-foot{
  display: flex;
  justify-content: space-between;
}
.pl-zan{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.pl-zan-num{
  font-size: 24rpx;
  color: #cdcdcd;
  float: left;
}
.pl-time{
  font-size: 24rpx;
  color: #cdcdcd;
}