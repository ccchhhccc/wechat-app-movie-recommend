<!-- swiper -->
<view class="swiper">
  <swiper autoplay interval="{{interval}}">
    <block>
      <swiper-item>
        <view class="test"></view>
      </swiper-item>
    </block>
    <block>
      <swiper-item>
        <view class="y"></view>
      </swiper-item>
    </block>
  </swiper>
  <view class="sear">
    <i class="sear-icon" style="background-image:url(../../assets/imgs/sousuo.png);background-size:100% 100%;"></i>
    <text>请输入你想要搜索的内容</text>
  </view>
</view>
<!-- banner -->
<view class="banner">
  <view class="banner-item" wx:for="{{bannel}}" wx:key="{{index}}" data-id="{{item.key}}" bindtap='goToClass'>
    <image src="../../assets/imgs/stop.png" />
    <text>{{item.title}}</text>
  </view>
</view>
<view class="bar"></view>
<!-- channel -->
<!-- 热门电影 -->
<view class="title">
  <view class="top"></view>
  <text>热门电影</text>
  <view class='total'>
    <text>更多</text>
    <i class="icon-right" style="background-image:url(../../assets/imgs/right.png);background-size:100% 100%;"></i>
  </view>
</view>
<scroll-view scroll-x="true" class="scroll-item">
  <view class="scroll-x">
    <view class="list-item" wx:for="{{hotMovie}}" wx:key="{{index}}">
      <image src="{{item.cover}}" />
      <text>{{item.title}}</text>
    </view>
  </view>
</scroll-view>

